# GitHub Copilot CLI Sandbox - Development Environment
# Base: .NET 10 SDK + Node.js 24 + Angular CLI (standard dev environment)
#
# Usage:
#   gh copilot suggest "how to find large files"
#   gh copilot explain "git rebase -i HEAD~3"

FROM mcr.microsoft.com/dotnet/sdk:10.0

# Install Node.js 24 + Angular CLI
RUN curl -fsSL https://deb.nodesource.com/setup_24.x | bash - && \
    apt-get install -y nodejs && \
    npm install -g @angular/cli@latest

# Install tools
RUN apt-get update && apt-get install -y \
    git \
    curl \
    jq \
    vim \
    python3 \
    && rm -rf /var/lib/apt/lists/*

# Install GitHub CLI
RUN curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg && \
    chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg && \
    echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | tee /etc/apt/sources.list.d/github-cli.list > /dev/null && \
    apt-get update && \
    apt-get install -y gh && \
    rm -rf /var/lib/apt/lists/*

# Install code-server (VS Code in browser)
RUN curl -fsSL https://code-server.dev/install.sh | sh

# Create non-root user
RUN useradd -m -s /bin/bash copilot && \
    mkdir -p /workspace && \
    chown copilot:copilot /workspace

WORKDIR /workspace

# Copy entrypoint and upload server
COPY entrypoint.sh /entrypoint.sh
COPY upload-server/server.py /opt/upload-server.py
RUN chmod +x /entrypoint.sh /opt/upload-server.py

# Switch to non-root user
USER copilot

# Install gh-copilot extension
RUN gh extension install github/gh-copilot || true

# Create config directories for host context mounts
RUN mkdir -p /home/copilot/.config/gh \
             /home/copilot/.azure \
             /home/copilot/share \
             /home/copilot/api-logs

ENTRYPOINT ["/entrypoint.sh"]
